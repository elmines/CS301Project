@model UAMovie.Models.ViewModels.TheaterViewModel
@{
    ViewData["Title"] = "SearchForTheaters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplaySearchedTheaters</h2>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.theater.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.Zip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Theater item in Model.foundTheaters)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.ActionLink("Select","SelectShowing", "TicketOrderViewModel", new { theaterID = item.ID, userName = Model.userName,movieName = Model.movieName});
                </td>
                @Html.HiddenFor(model => item.ID)
                @Html.HiddenFor(model => model.userName)
                @Html.HiddenFor(model => model.movieName)
            </tr>
           
        }
    </tbody>
</table>

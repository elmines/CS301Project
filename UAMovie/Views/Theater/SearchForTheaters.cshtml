@model UAMovie.Models.ViewModels.TheaterViewModel
@{
    ViewData["Title"] = "SearchForTheaters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchForTheaters</h2>
<!--TODO: make a dropdown for the preferred theaters and a textbox for the search parameter-->
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.theater.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theater.Zip)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.preferredTheaters)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
            </tr>
        }
        @using (Html.BeginForm("DisplaySearchedTheaters", "TheaterViewModel", FormMethod.Post, new { searchName = Model.searchName, userName = Model.customer.username }))
        {
            @Html.EditorFor(model => model.searchName);

            <input type="submit" value="Search" class="btn btn-default" />
        }


    </tbody>
</table>
